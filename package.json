{
  "name": "ts-ast-helper",
  "module": "src/index.ts",
  "version": "0.0.6",
  "types": "types/index.d.ts",
  "exports": {
    "default": {
      ".": "./src/index.ts",
      "util": "./src/util.ts",
      "experimental": "./src/experimental.ts",
      "types": "./types/index.d.ts"
    },
    "require": {
      ".": "./dist/index.ts",
      "util": "./dist/util.ts",
      "experimental": "./dist/experimental.ts",
      "types": "./types/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "bun run build-base && bun run build-experimental && bun run build-util && bun run build-type",
    "build-base": "bun build ./src/index.ts --outdir ./dist  --declaration",
    "build-experimental": "bun build ./src/experimental.ts --outdir ./dist",
    "build-util": "bun build ./src/util.ts --outdir ./dist",
    "build-type": "bun run build-tsc-types && bun run change-types-to-rel",
    "build-tsc-types": "tsc -p tsconfig.definitions.json",
    "change-types-to-rel": "bun run ./actions/Replace-definitions-to-relative.action.ts",
    "tf": "runtf -s -sn 3 --bun -np",
    "tfa": "cross-env  runtf -s -sn 3 --bun -np -p action",
    "tfad": "cross-env NODE_ENV=development runtf -s -sn 3 --bun -np -p action",
    "publish": "npm publish --access public"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.7",
    "inquirer": "^9.2.12"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "run-test-files": "^1.0.11"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "arrowParens": "always",
    "bracketSameLine": false,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "semi": false,
    "useTabs": false
  }
}
