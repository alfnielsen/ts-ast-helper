{
  "name": "ts-ast-helper",
  "main": "dist/index.js",
  "version": "0.0.22",
  "types": "types/index.d.ts",
  "type": "module",
  "files": [
    "dist/index.js",
    "dist/util.js",
    "types"
  ],
  "scripts": {
    "build": "bun run clean-builds && bun run build-index-files && bun run build-base && bun run build-util && bun run build-type",
    "build-full": "bun run clean-builds && bun run build-index-files && bun run build-base && bun run build-experimental && bun run build-util && bun run build-type",
    "clean-builds": "rm -R -f types && rm -R -f dist",
    "build-base": "bun build --target=browser ./src/index.ts --outdir ./dist  --declaration --external typescript",
    "build-experimental": "bun build --target=browser ./src/experimental.ts --outdir ./dist",
    "build-util": "bun build  --target=browser ./src/util.ts --outdir ./dist",
    "build-type": "bun run build-tsc-types && bun run change-types-to-rel",
    "build-tsc-types": "tsc -p tsconfig.definitions.json",
    "build-index-files": "bun run ./actions/build-steps/Create-all-file-export-files.action.ts",
    "change-types-to-rel": "bun run ./actions/build-steps/Replace-types-files-to-relative.action.ts",
    "tf": "runtf -s -sn 3 --bun -np",
    "tfa": "cross-env  runtf -s -sn 3 --bun -np -p action",
    "tfad": "cross-env NODE_ENV=development runtf -s -sn 3 --bun -np -p action",
    "publish": "npm publish --access public"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.7",
    "inquirer": "^9.3.7",
    "run-test-files": "^1.0.11"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "arrowParens": "always",
    "bracketSameLine": false,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "semi": false,
    "useTabs": false
  }
}
